@inherits LayoutComponentBase

<div class="page d-flex flex-row">
    <!-- Sidebar -->
    <aside class="sidebar bg-secondary text-white p-3 shadow-sm">
        <NavMenu />
    </aside>

    <!-- Main Content Area -->
    <main class="flex-grow-1">
        <!-- Top Navigation Row -->
        <header class="top-row px-4 py-2 bg-light border-bottom">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-primary text-decoration-none">
                About
            </a>
        </header>

        <!-- Content Section -->
        <section class="content px-4 py-3 bg-white rounded shadow-sm">
            @Body
        </section>
    </main>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="alert alert-danger d-none">
    <strong>An unhandled error has occurred.</strong>
    <div class="mt-2">
        <a href="" class="btn btn-danger btn-sm me-2">Reload</a>
        <button class="btn btn-light btn-sm dismiss">Dismiss</button>
    </div>
</div>
